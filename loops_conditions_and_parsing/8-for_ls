#!/usr/bin/env bash
# This script lists the contents of the current directory, displaying
# only the part of the file name after the first dash (excluding hidden files).

for file in $(ls); do
  # Skip hidden files (those starting with a dot)
  if [[ "$file" != .* ]]; then
    # Check if the file or folder contains a dash
    if [[ "$file" == *"-"* ]]; then
      # Print the part after the first dash
      echo "${file#*-}"
    fi
  fi
done
