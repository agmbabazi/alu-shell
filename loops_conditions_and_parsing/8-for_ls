#!/usr/bin/env bash
# This script lists the contents of the current directory and displays
# only the part of the file name after the first dash, excluding hidden files.

for file in $(ls -1); do
  # Only process files with a dash in their names
  if [[ "$file" == *"-"* ]]; then
    # Extract and display the part of the file name after the first dash
    echo "${file#*-}"
  fi
done
