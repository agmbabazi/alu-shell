#!/usr/bin/env bash
# This script lists the contents of the current directory, displaying
# only the part of the file name after the first dash (excluding hidden files).

for file in $(ls -1); do
  # Process only files or directories with a dash in their names
  if [[ "$file" == *"-"* ]]; then
    # Extract and display the part of the file name after the first dash
    echo "${file#*-}"
  fi
done
